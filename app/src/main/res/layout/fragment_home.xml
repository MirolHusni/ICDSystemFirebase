<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Crowd Detection Level"
                android:textStyle="bold"
                android:textColor="#0066ff"
                android:textSize="20dp"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_counter" />

                    <TextView
                        android:id="@+id/lvl3status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="0"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:background="@drawable/round_green"
                        android:layout_marginLeft="153dp"
                        android:layout_marginBottom="5dp"/>

                    <Button
                        android:id="@+id/bttnLvl3"
                        android:layout_width="333dp"
                        android:layout_height="39dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/button_custom"
                        android:textColor="#ffff"
                        android:text="Level 3"
                        />
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_mosque" />

                    <TextView
                        android:id="@+id/surauStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="0"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:background="@drawable/round_green"
                        android:layout_marginLeft="153dp"
                        android:layout_marginBottom="5dp"/>

                    <Button
                        android:id="@+id/bttnSurau"
                        android:layout_width="333dp"
                        android:layout_height="39dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/button_custom"
                        android:textColor="#ffff"
                        android:text="Surau" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <ImageView
                        android:id="@+id/imageView10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_print" />

                    <TextView
                        android:id="@+id/lpsStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="0"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:background="@drawable/round_green"
                        android:layout_marginLeft="153dp"
                        android:layout_marginBottom="5dp"/>

                    <Button
                        android:id="@+id/bttnLps"
                        android:layout_width="333dp"
                        android:layout_height="39dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/button_custom"
                        android:textColor="#ffff"
                        android:text="Library Printing Service"
                        android:layout_weight="0.25" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView11"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_counter" />

                    <TextView
                        android:id="@+id/lvl25Status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="0"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:background="@drawable/round_green"
                        android:layout_marginLeft="153dp"
                        android:layout_marginBottom="5dp"/>

                    <Button
                        android:id="@+id/bttnLvl25"
                        android:layout_width="333dp"
                        android:layout_height="39dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/button_custom"
                        android:textColor="#ffff"
                        android:text="Level 25" />
                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
