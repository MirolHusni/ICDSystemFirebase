<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/list_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Name"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginStart="20dp"
        android:layout_alignTop="@+id/list_evDate"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/list_evDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="event description"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/list_event"
        android:layout_alignEnd="@+id/list_event" />

    <TextView
        android:id="@+id/list_evDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:layout_marginTop="12dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="26dp" />

    <TextView
        android:id="@+id/tvCrowdStat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/list_evDesc"
        android:layout_below="@+id/list_evDesc"
        android:layout_marginTop="10dp"
        android:text="Crowd status :" />

    <TextView
        android:id="@+id/tvCrowdStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvCrowdStat"
        android:layout_marginStart="13dp"
        android:layout_toEndOf="@+id/tvCrowdStat"
        android:text="TextView" />
</RelativeLayout>